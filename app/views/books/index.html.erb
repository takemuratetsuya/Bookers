<%= form_with model: @book, url: '/books', method: :post do |f| %>
<p id = "notice"></p>
<h1>Books</h1>
<% @books.each do |book| %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <span>
      <%= link_to book.title, book_path(book.id) %>
      </span>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>
  <tbody></tbody>
</table>
<h2>New book</h2>
<form class = "new_book" id = "new_book" action = "/books" accept-charset = "UFT-8" method = "post">
  <div class = "fild">
    <label for = "book_title">Title</label>
    <input class = "book_title" type = "text" name = "book[title]" id = "book_title">
  </div>
  <div class = "fild">
    <label for = "book_body">Body</label>
    <textarea class = "book_body" name = "book[body]" id = "book_body"></textarea>
  </div>
  <div class = "actions">
    <input type = "submit" name = "commit" value = "Create Book" data-disable-with = "Create Book">
  </div>
</form>

